@inject IWebHostEnvironment WebHostEnv
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ModernMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ModernMvc.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="app-shell-header">
        <div class="app-shell-header__inner">
            <div class="app-shell-header__left">Order System</div>
            <nav class="app-shell-header__center">
                <a href="/">Home</a>
                <a href="/contact">Contact</a>
            </nav>
            <div class="app-shell-header__right">
                <span class="app-shell-header__env">@(ViewData["EnvironmentLabel"] ?? WebHostEnv.EnvironmentName)</span>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="app-shell-footer">
        <div class="app-shell-footer__inner">
            <span class="app-shell-footer__copy">&copy; @DateTime.UtcNow.Year - Order System</span>
            <a href="/contact" class="app-shell-footer__link">Contact</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

