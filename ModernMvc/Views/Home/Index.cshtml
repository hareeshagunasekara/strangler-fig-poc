@model ModernMvc.Models.HomeDashboardViewModel
@{
    ViewData["Title"] = "Order Management System";
}
@section Styles {
    <link rel="stylesheet" href="~/css/modern-dashboard.css" asp-append-version="true" />
}

<main class="oms-home">
    <span class="oms-home__badge" aria-hidden="true">MODERNISED HOME</span>
    <!--  Hero header -->
    <header class="oms-home__hero">
        <h1 class="oms-home__title">Order Management System</h1>
        <p class="oms-home__subtitle">End-to-end order lifecycle: create, fulfill, track, and report from one platform.</p>
    </header>

    <!--  Primary action area -->
    <section class="oms-home__actions" aria-label="Main actions">
        <a href="/Contact" class="oms-home__support" aria-label="Contact support">
            <span class="oms-home__support-icon" aria-hidden="true">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
            </span>
            <span>Contact</span>
        </a>
    </section>

    <!--  Quick start tiles-->
    <section class="oms-home__tiles" aria-label="Quick start">
        <a href="#" class="oms-home__tile oms-home__tile--action" aria-label="Create a new order">
            <span class="oms-home__tile-icon" aria-hidden="true">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
            </span>
            <span class="oms-home__tile-label">Create order</span>
        </a>
        <a href="#" class="oms-home__tile oms-home__tile--action" aria-label="Track an order">
            <span class="oms-home__tile-icon" aria-hidden="true">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
            </span>
            <span class="oms-home__tile-label">Track order</span>
        </a>
        <a href="#" class="oms-home__tile oms-home__tile--action" aria-label="Cancel an order">
            <span class="oms-home__tile-icon" aria-hidden="true">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></svg>
            </span>
            <span class="oms-home__tile-label">Cancel order</span>
        </a>
    </section>

    <!--  Order summary -->
    <section class="oms-home__summary" aria-label="Order summary">
        <h2 class="oms-home__summary-title">Order summary</h2>
        <div class="oms-home__summary-grid">
            <div class="oms-home__summary-card oms-home__summary-card--total">
                <span class="oms-home__summary-icon" aria-hidden="true">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/><polyline points="3.27 6.96 12 12.01 20.73 6.96"/><line x1="12" y1="22.08" x2="12" y2="12"/></svg>
                </span>
                <span class="oms-home__summary-value">@Model.TotalOrders</span>
                <span class="oms-home__summary-label">Total</span>
            </div>
            <div class="oms-home__summary-card oms-home__summary-card--pending">
                <span class="oms-home__summary-icon" aria-hidden="true">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                </span>
                <span class="oms-home__summary-value">@Model.PendingCount</span>
                <span class="oms-home__summary-label">Pending</span>
            </div>
            <div class="oms-home__summary-card oms-home__summary-card--processing">
                <span class="oms-home__summary-icon" aria-hidden="true">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 12a9 9 0 1 1-6.219-8.56"/></svg>
                </span>
                <span class="oms-home__summary-value">@Model.ProcessingCount</span>
                <span class="oms-home__summary-label">Processing</span>
            </div>
            <div class="oms-home__summary-card oms-home__summary-card--shipped">
                <span class="oms-home__summary-icon" aria-hidden="true">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>
                </span>
                <span class="oms-home__summary-value">@Model.ShippedCount</span>
                <span class="oms-home__summary-label">Shipped</span>
            </div>
            <div class="oms-home__summary-card oms-home__summary-card--delayed">
                <span class="oms-home__summary-icon" aria-hidden="true">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>
                </span>
                <span class="oms-home__summary-value">@Model.DelayedCount</span>
                <span class="oms-home__summary-label">Delayed</span>
            </div>
        </div>
    </section>

    <!--  Recent orders preview -->
    <section class="oms-home__recent" aria-label="Recent orders">
        <h2 class="oms-home__recent-title">Recent orders</h2>
        <ul class="oms-home__recent-list">
            @foreach (var order in Model.RecentOrders)
            {
                <li class="oms-home__recent-row">
                    <span class="oms-home__recent-id">#@order.OrderId</span>
                    <span class="oms-home__pill oms-home__pill--@order.Status.ToLowerInvariant()">@order.Status</span>
                </li>
            }
        </ul>
        <a href="#" class="oms-home__recent-link">View all orders</a>
    </section>
</main>
